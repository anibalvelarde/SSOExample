@{
    ViewBag.Title = "Home Page";
}

<h3>Claims in the security token:</h3>
<br />

<table class="table table-responsive table-hover">
    <tr>
        <th>
            Claim Type
        </th>
        <th>
            Claim Value
        </th>       
    </tr>
    @foreach (System.Security.Claims.Claim claim in ViewBag.ClaimsIdentity.Claims)
    {
        <tr>
            <td>
                @claim.Type
            </td>
            <td>
                @claim.Value
            </td>           
        </tr>
    }
</table>